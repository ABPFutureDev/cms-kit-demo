@using CmsKitDemo
@{
    var platformVersion = CmsKitDemoAssemblyInfo.GetAssemblyInformationOrNull();
    var dotnetVersion = CmsKitDemoAssemblyInfo.GetDotNetVersion();
    
    if (platformVersion != null && dotnetVersion != null)
    {
        <footer>
            <div class="text-muted text-center" style="font-size: 0.9em;border-top: 1px solid #c6c6c6;padding: 10px">
                Made with ❤️ on @($"ABP v{platformVersion.ProductVersion} & {dotnetVersion}"). Updated on @($"{platformVersion.ModificationDate.ToString("MMMM dd, yyyy, HH:mm")}")
            </div>
        </footer>

    }
}